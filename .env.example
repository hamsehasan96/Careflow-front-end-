# Application
NODE_ENV=development
PORT=3000
API_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=https://careflow-backend.onrender.com

# NextAuth.js Configuration
NEXTAUTH_URL=https://careflow-frontend.vercel.app
NEXTAUTH_SECRET=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/careflow
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=careflow
DB_DIALECT=postgres
DB_PROTOCOL=postgres
DB_SSL=false

# Email Configuration
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@careflow.com

# Storage Configuration
NEXT_PUBLIC_STORAGE_URL=https://storage.careflow.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Security
JWT_SECRET=your_jwt_secret_here
WORKER_API_KEY=your_worker_api_key_here
CSRF_SECRET=your_csrf_secret_here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=10mb

# Database Management
AUTO_MIGRATE=true
SEED_DATABASE=false

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Email (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Twilio (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_aws_s3_bucket
