# Application
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=https://careflow-backend.onrender.com

# NextAuth.js Configuration
NEXTAUTH_URL=https://careflow-frontend.vercel.app
NEXTAUTH_SECRET=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/careflow

# Email Configuration
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@careflow.com

# Storage Configuration
NEXT_PUBLIC_STORAGE_URL=https://storage.careflow.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
